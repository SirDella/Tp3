<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardViewDet"
        android:layout_width="@dimen/act_detalle_img_size"
        android:layout_height="@dimen/act_detalle_img_size"
        android:layout_centerHorizontal="true"
        android:background="@android:color/white"
        app:cardElevation="20sp"
        android:layout_marginTop="16sp"
        app:cardCornerRadius="100sp"
        android:outlineAmbientShadowColor="@color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/imageViewDet"
            android:layout_width="@dimen/act_detalle_img_size"
            android:layout_height="@dimen/act_detalle_img_size"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:srcCompat="@tools:sample/avatars" />
    </androidx.cardview.widget.CardView>



    <TextView
        android:id="@+id/textViewDetNombre"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:textSize="@dimen/act_detalle_text_nombre_size"
        android:textStyle="bold"
        android:text="TextView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cardViewDet" />

    <TextView
        android:id="@+id/textViewDetEdad"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/act_detalle_text_chico"
        android:layout_marginTop="16dp"
        android:text="TextView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewDetNombre" />

    <TextView
        android:id="@+id/textViewDetPais"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:textSize="@dimen/act_detalle_text_chico"
        android:layout_marginTop="8dp"
        android:text="TextView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewDetEdad" />

    <TextView
        android:id="@+id/textViewDetCP"
        android:layout_width="wrap_content"
        android:textSize="@dimen/act_detalle_text_chico"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="TextView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewDetPais" />

    <TextView
        android:id="@+id/textViewDetNum"
        android:layout_width="wrap_content"
        android:textSize="@dimen/act_detalle_text_chico"
        android:layout_height="wrap_content"
        android:foreground="?attr/selectableItemBackground"
        android:layout_marginTop="8dp"
        android:text="TextView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewDetCP" />

    <TextView
        android:id="@+id/textViewDetCorreo"
        android:layout_width="wrap_content"
        android:textSize="@dimen/act_detalle_text_chico"
        android:foreground="?attr/selectableItemBackground"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="TextView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewDetNum" />

</androidx.constraintlayout.widget.ConstraintLayout>